<div class="container">
  <div class="row">
    <h5 class="two-line-heading">会員情報編集</h5>
  </div>

  <%= form_with model: @customer, url: customer_path, local: true do |f| %>
    <%= render "layouts/errors", obj: @customer %>

    <div class="row mt-3">
      <div class="col-3"><%= f.label "メールアドレス", class:"w-100" %></div>
      <div class="col-3"><%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: "sample@example.com", class:"w-100" %></div>
    </div>

    <div class="row mt-4 mb-5">
      <div class="col-3"></div>
      <div class="col-3"><%= f.submit "編集内容を保存", class:"btn-flat-success" %></div>
      <div class="col-2 offset-2"><%= link_to "退会する", confirm_unsubscribe_path, class:"btn btn-danger" %></div>
    </div>
  <% end %>
</div>