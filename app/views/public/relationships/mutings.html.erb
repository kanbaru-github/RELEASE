<div class="container" style="min-height: 600px;">

  <div class="row">
    <h5 class="heading">非表示にした投稿</h5>
  </div>

  <div class="row">
    <% if @customers.exists? %>
    <table class='table'>
      <tbody>
      <% @posts.each do |post| %>
        <% if current_customer.muting?(post.customer) %>
          <tr id="post_<%= post.id %>">
            <td><%= post.created_at.strftime("%Y/%m/%d %H:%M:%S") %></td>
            <td>
              <div class="expand-image" data-image-url="<%= attachment_url(post, :image, :fill, 700, 700) %>">
                <!--data:データ型を扱うことの宣言。その後ろは任意-->
                <!--attachment_url:refileのURLを取得するメソッド-->
                <%= attachment_image_tag(post, :image, :fill, 50, 50) %>
              </div>
            </td>
            <div class="modal">
            　　<div class="big-img"><img src="" alt=""></div>
            　　<p class="close-btn"><a href="">✖</a></p>
            </div>
            <td class="text"><%= post.text.truncate(100) %></td>
            <td><%= link_to "非表示を解除する", customer_relationships_path(post.customer.id), method: :delete, class: "btn btn-primary" %></td>
          </tr>
        <% end %>
      <% end %>
      </tbody>
    </table>
    <% else %>
    <h1 class="mx-auto" style="padding: 200px;">非表示にした投稿はありません</p>
    <% end %>
</div>