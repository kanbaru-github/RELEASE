<div class="container pt-5">

  <div class="bg-video">
    <%= video_tag("/videos/authentication.mp4", autoplay: :true, loop: :true, muted: :true, class: 'video-content') %>
    <!--autoplay => true 自動再生を有効-->
    <!--loop => true 繰り返し再生-->
    <!--muted: => true 音を出さないように指定-->
    <p>LOG IN</p>
  </div>

  <%= form_with model: @customer, url: customer_session_path, class:"contact-form" ,local: true do |f| %>
  <%= render "public/shared/error_messages", resource: resource %>
  <% if flash[:danger] %>
    <p class="text-red"><%= flash[:danger] %></p>
  <% end %>

    <div class="row mt-5">
      <div class="col-8 mx-auto col-lg-5 form-field">
        <%= f.email_field :email, autofocus: true, autocomplete: "email", class:"input-text form-js-input" %>
        <label for="staticEmail" class="label">Email</label>
      </div>
    </div>

    <div class="row mt-3">
      <div class="col-8 mx-auto col-lg-5 form-field">
        <%= f.password_field :password, autocomplete: "current-password", class:"input-text form-js-input" %>
        <label for="inputPassword" class="label">Password</label>
      </div>
    </div>

    <div class="row mt-5 mb-5 form-field">
      <%= f.submit "Login", class:"col-3 mx-auto col-lg-2 submit-btn" %>
    </div>

  <% end %>

  <div class="row mt-3">
    <div class="col-xs-6 mx-auto">
      <h2 class="section-ttl">会員登録がお済みでない方</h2>
      <p><%= link_to "こちら", new_customer_registration_path, class: "underline" %>から新規登録してください。</p>
    </div>
  </div>

  <div class="row mt-2 pb-5">
    <div class="col-12 text-center"><%= render "public/shared/links" %></div>
  </div>

</div>