<% if post.cheered_by?(current_customer) %>
  <%= link_to post_cheers_path(post), method: :delete, remote: true do %>
    <%= image_tag("cheer.jpeg", size:"20x20") %>
    <%= post.cheers.count %>
  <% end %>
<% else %>
  <%= link_to post_cheers_path(post), method: :post, remote: true do %>
    <%= image_tag("cheer.jpeg", size:"20x20") %>
    <%= post.cheers.count %>
  <% end %>
<% end %>

