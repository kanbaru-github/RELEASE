<% if post.sympathied_by?(current_customer) %>
  <%= link_to post_sympathies_path(post), method: :delete, remote: true do %>
    <%= image_tag("sympathy.jpeg", size:"20x20") %>
    <%= post.sympathies.count %>
  <% end %>
<% else %>
  <%= link_to post_sympathies_path(post), method: :post, remote: true do %>
    <%= image_tag("sympathy.jpeg", size:"20x20") %>
    <%= post.sympathies.count %>
  <% end %>
<% end %>
