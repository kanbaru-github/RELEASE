<div class="container pt-5">

  <div class="row">
    <h5 class="heading">新規投稿</h5>
  </div>

  <%= form_with model: @post, url:posts_path, local: true do |f| %>
    <%= render 'layouts/errors', obj: @post %>

    <div class="row mb-3">
      <div class="mini-heading"><h5>画像(任意)</h5></div>
    </div>
    <div class="from-group">
      <%= f.attachment_field :image, class: 'from-control-file' %>
    </div>

    <div class="row mb-3">
      <div class="mini-heading"><h5>本文</h5></div>
    </div>
    <div class="form-group">
      <%= f.text_area :text, size: "20x5", class: 'form-control' %>
  　</div>

    <div class="row mb-3">
      <div class="mini-heading"><h5>カテゴリー</h5></div>
    </div>
    <div class="form-group col-6">
      <%= f.collection_select :category_id, Category.all, :id, :name, {:include_blank => true}, class: 'form-control' %>
  　</div>

    <div class="row pb-5">
      <div class="mx-auto">
        <%= f.submit '投稿する', class:"btn btn-success" %>
      </div>
    </div>

  <% end %>
</div>