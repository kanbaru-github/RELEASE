<table class='table'>
  <tbody>
  <% if posts.present? %>
    <% posts.each do |post| %>
      <% unless current_customer.muting?(post.customer) %>
      
        <tr id="post_<%= post.id %>">
          <td class="create-time"><%= post.created_at.strftime("%Y/%m/%d %H:%M:%S") %></td>
          <td><%= post.category.name %></td>
          <td>
            <div class="expand-image_<%= post.id %> expand-image">
              <!--_<#%= post.id %>をつけることでIDをつけて識別できるように-->
              <!--でないと全て同じ画像になる-->
              <%= attachment_image_tag(post, :image, :fill, 50, 50) %>
            </div>
            <div class="modal_<%= post.id %> modal">
          　　<div class="big-img_<%= post.id %> big-img">
          　　    <%= attachment_image_tag(post, :image, :fill, 800, 800) %>
          　　</div>
          　　<p class="close-btn"><a href="">✖</a></p>
            </div>
          </td>
          <td class="text"><p><%= post.text.truncate(100) %></p></td>
          <!--truncate():文字数制限-->
          <% if post.customer == current_customer %>
            <td><%= link_to '編集する', edit_post_path(post), class: "btn btn-sm btn-success" %></td>
            <td><%= link_to '削除する', post_path(post), method: :delete, data: { confirm: '本当に消しますか？' }, class: "btn btn-sm btn-danger" %></td>
          <% else %>
            <td class="sympathy-btn"><%= render "public/sympathies/sympathy-btn", post: post %></td>
            <td class="cheer-btn"><%= render "public/cheers/cheer-btn", post: post %></td>
            <td><%= link_to "非表示にする", customer_relationships_path(post.customer.id), method: :post, class: "btn btn-success" %></td>
          <% end %>
        </tr>
      <% end %>
    <% end %>
  <% else %>
    <h2 style="text-align: center; padding-top: 30px;">検索に合致するものはありません</h2>
  <% end %>
  </tbody>
</table>

<script>
  // 画像拡大
<% posts.present? && posts.each do |post| %>
// scriptでもル-プ処理をしないと同じIDにならない
$(function() {
  $('.expand-image_<%= post.id %>').click(function() {
      $('.big-img_<%= post.id %>').css('display', 'block')
      // display: none;をblockに変更する
    $('.modal_<%= post.id %>').fadeIn();
    $('body,html').css('overflow-y', 'hidden');
    // 画像が画面からはみ出る場合は非表示にする。画面のブレ防止のため。
    return false
  });
  $('.close-btn').click(function() {
    $('.modal_<%= post.id %>').fadeOut();
    $('body,html').css('overflow-y', 'visible');
    return false
  });
})
<% end %>
</script>