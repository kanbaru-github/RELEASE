<div class="container">

  <div class="row">
    <h5 class="heading">お問合せ内容入力</h5>
  </div>

  <%= form_for(@contact, url: confirm_path) do |f| %>
    <div class="form-group">
      <%= f.label :name, 'お名前*' %>
      <%= f.text_field :name, size:"20x20", autofocus: true, class: 'form-control' %>
    </div>
    <div class="form-group">
      <%= f.label :phone_number, '電話番号*' %>
      <%= f.text_field :phone_number, autofocus: true, class: 'form-control' %>
    </div>
    <div class="form-group">
      <%= f.label :email, '返信用メールアドレス*' %>
      <%= f.text_field :email, autofocus: true, class: 'form-control' %>
    </div>
    <div class="form-group">
      <%= f.label :message, 'メッセージ*' %>
      <%= f.text_area :message, size: '10x10', class: 'form-control' %>
    </div>
    <div class="row">
      <div class="mx-auto">
        <%= f.submit '入力内容確認', class:"btn btn-secondary" %>
      </div>
    </div>

  <% end %>
</div>
