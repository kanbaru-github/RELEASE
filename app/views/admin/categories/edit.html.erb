<div class="container category-edit">
  <%= render 'layouts/errors', obj: @category %>
  <div class="row">
    <h5 class="heading">カテゴリー編集</h5>
  </div>

  <div class="row mt-5 pt-5">
    <div class="mx-auto">
      <%= form_with model: @category, url: admin_category_path(@category.id), class:"form-inline", local: true do |f| %>
        <%= f.label :name, "カテゴリー名", class:"form-group ml-1" %>
        <%= f.text_field :name, class:"form-group ml-5", placeholder: "カテゴリー名" %>
        <%= f.submit '変更を保存', class:'btn btn-success ml-5' %>
      <% end %>
    </div>
  </div>
</div>